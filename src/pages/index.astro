    width: 100%;
    max-width: 1200px;
    margin-left: auto;
    margin-right: auto;
  }
  .mx-auto {
    margin-left: auto;
    margin-right: auto;
  }
  .max-w-sm {
    max-width: 30rem;
  }

  /* button styles */
  .bg-blue-500 {
    background-color: #4299e1;
  }
  .py-2 {
    padding-top: 0.5rem;
    padding-bottom: 0.5rem;
  }
