    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Astro + TailwindCSS</title>
  </head>

  <body>
    <nav>
      <ul class="flex justify-between items-center p-4">
        <li>
          <a href="#" class="text-lg font-medium hover:text-gray-300">Home</a>
        </li>
        <!-- <li><a href="#" class="text-lg font-medium hover:text-gray-300">About</a></li>
		  <li><a href="#" class="text-lg font-medium hover:text-gray-300">Contact</a></li> -->
